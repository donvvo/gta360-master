<div id="content">
  <div class="container inner-padding">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="row">
          <div class="col-sm-12">
            <h1>Sign In</h1>
            <div class="separator"><span><i class="fa fa-circle"></i></span></div>
            <div class="spacer-single"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            {{#if error}}
              <div class="alert alert-danger alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                {{error}}
              </div>
            {{/if}}
            {{#if success}}
              <div class="alert alert-success alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                {{success}}
              </div>
            {{/if}}
            <form class="theme_form" action="/signin" method="POST" accept-charset="utf-8">
              <input type="hidden" name="_csrf" value="{{csrf}}" id="">
              <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" name="Email" value="" id="Email" required>
              </div>
              <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" class="form-control" name="Password" value="" id="Password" required>
              </div>
              <div class="form-group text-right">
                <input type="submit" class="btn btn-line btn-white" value="Sign In">
              </div>
            </form>
          </div>
        </div>
        <div class="row" style="padding-top: 20px;">
          <div class="col-sm-5">
            <a class="forgot-password-link" href="/forgot-password">
              Forgot Password?
            </a>
          </div>
          <div class="col-sm-7">
            <span class="signup-link">
              <a href="/signup">Do not have an account?</a>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


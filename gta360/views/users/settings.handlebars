<div id="content">
  <div class="container inner-padding">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="row">
          <div class="col-sm-12">
            <h1>Settings</h1>
            <div class="separator"><span><i class="fa fa-circle"></i></span></div>
            <div class="spacer-single"></div>
          </div>
        </div>
      </div>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="row">
          <div class="col-sm-6">
            <div class="row">
              <div class="col-sm-12">
                <h3>Change Password</h3>
                <p>Please enter a new password for your account.</p>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                {{#if error}}
                  <div class="alert alert-danger alert-dismissable">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    {{error}}
                  </div>
                {{/if}}
                {{#if success}}
                  <div class="alert alert-success alert-dismissable">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    {{success}}
                  </div>
                {{/if}}
                <form class="theme_form" method="POST" action="/user/change-password" accept-charset="utf-8">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" name="password" value="" required>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group">
                        <label for="Confirm-password">Confirm password</label>
                        <input type="password" class="form-control" name="confirm_password" value="" required>
                      </div>
                    </div>
                  </div>
                  <div class="form-group text-right">
                    <input type="submit" class="btn btn-line btn-white" value="Change Password">
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="row">
              <div class="col-sm-12">
                <h3>Email Notification</h3>
                <p>Customize contact email and notification level. </p>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                {{#if notificationSuccess}}
                  <div class="alert alert-success alert-dismissable">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    {{notificationSuccess}}
                  </div>
                {{/if}}
                <form method="POST" action="/user/settings" accept-charset="utf-8">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="form-group services-checkboxes">
                        <label>Notify tour status change</label>
                        <div>
                          <label>
                            <input type="radio" name="tour_notify" value="true" {{#if user.tourNotification}}
                              checked{{/if}}>Notify
                          </label>
                        </div>
                        <div>
                          <label>
                            <input type="radio" name="tour_notify" value="false" {{#unless user.tourNotification}}
                              checked{{/unless}}>Do not notify
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group text-right">
                    <input type="submit" class="btn btn-line btn-white" value="Apply Change">
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


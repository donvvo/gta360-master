<div id="content">
  <div class="container inner-padding">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="row">
          <div class="col-sm-12">
            <h1>Forgot Password</h1>
            <div class="separator"><span><i class="fa fa-circle"></i></span></div>
            <div class="spacer-single"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <p>Please enter the email you used to sign up. If you cannot remember your email, please contact us.</p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            {{#if error}}
              <div class="alert alert-danger alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                {{error}}
              </div>
            {{/if}}
            {{#if success}}
              <div class="alert alert-success alert-dismissable">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                {{success}}
              </div>
            {{/if}}
            <form class="theme_form" action="/forgot-password" method="POST" accept-charset="utf-8">
              <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" name="email" value="" required>
              </div>
              <div class="form-group text-right">
                <input type="submit" class="btn btn-line btn-white" value="Submit">
              </div>
            </form>
          </div>
        </div>
        <div class="row" style="padding-top: 20px;">
          <div class="col-sm-12 text-right">
            <span class="signup-link">
              <a href="/signup">Do not have an account?</a>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


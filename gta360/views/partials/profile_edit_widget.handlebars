<div class="row">
  <div class="col-sm-12">
    <h3>Basic Info</h3>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <label>First Name</label>
      <input type="text" class="form-control" name="first_name" value="{{profile_user.name.first_name}}"
             placeholder="First name" required>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label>Last Name</label>
      <input type="text" class="form-control" name="last_name" value="{{profile_user.name.last_name}}"
             placeholder="Last name" required>
    </div>
  </div>
</div>
{{#if profile_user.isClient}}
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <label for="">Title</label>
      <input type="text" class="form-control" name="title" value="{{profile_user.title}}" placeholder="Title">
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label for="">Brokerage</label>
      <input type="text" class="form-control" name="brokerage"
             value="{{profile_user.brokerage}}" placeholder="Brokerage">
    </div>
  </div>
</div>
{{/if}}
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <label for="description">Short Description of Yourself (up to 300 characters)</label>
      <textarea name="description" class="form-control" rows="4" maxlength="300">{{profile_user.description}}</textarea>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <h3>Contact</h3>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <label for="">Address</label>
      <input type="text" class="form-control" name="user_address"
             value="{{profile_user.address}}" placeholder="Address">
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <label for="">Telephone</label>
      <input type="text" class="form-control telephone" name="phone_number"
             value="{{profile_user.contact.phone}}" placeholder="Telephone">
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group">
      <label for="">Website</label>
      <input type="url" class="form-control" name="website" value="{{profile_user.website}}" placeholder="Website">
    </div>
  </div>
</div>

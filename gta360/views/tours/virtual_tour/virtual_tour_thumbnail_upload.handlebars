<!-- Content -->
<div class="container project-view">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <form id="gallery-upload-form" class="theme_form" action="{{url}}" method="post" enctype="multipart/form-data"
            accept-charset="utf-8">
          <h2>Upload Virtual Tour Thumbnail</h2>
          <p>Click 'Browser' button to start uploading thumbnail for virtual tour. Photo must be in .jpg or .png format
            and it should be less than 5MB. </p>
        <div class="form-group">
          <label class="control-label">Thumbnail Photo</label>
          <input id="virtual-tour-thumbnail-input"
                 name="thumbnailPhoto" type="file" accept=".jpg,.png" class="file-loading"
                 data-allowed-file-extensions='["jpg", "png"]'>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/bootstrap-fileinput/js/fileinput.min.js" type="text/javascript"></script>
<script src="/js/fileUploader.js" type="text/javascript"></script>

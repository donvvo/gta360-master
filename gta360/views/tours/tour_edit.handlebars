<div id="content" class="no-bottom no-top">
    <!-- Tour settings section begin -->
    <section id="TourProfile" class="side-bg no-bottom">
      <form id="tour_profile_form" class="theme_form" method="POST" accept-charset="utf-8">
        <div class="container inner-padding">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
              <h1>Tour Profile</h1>
              <div class="separator"><span><i class="fa fa-circle"></i></span></div>
              <div class="spacer-single"></div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-xs-12">
              {{> tour_profile_widget}}
              <input type="hidden" name="tour_profile" value="true">
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group text-right">
                    <button type="submit" class="btn btn-line btn-edit" name="buttonSection"
                            value="TourProfile">Save</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>
    <section id="TourSettings" class="side-bg no-top">
      <form id="tour_settings_form" class="theme_form" method="POST" accept-charset="utf-8">
        <div class="container">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
              <h1>Tour Settings</h1>
              <div class="separator"><span><i class="fa fa-circle"></i></span></div>
              <div class="spacer-single"></div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-xs-12">
              <input type="hidden" name="tour_settings" value="true">
              {{#if userAdminOrManager}}
                <div class="row">
                  <div class="col-sm-12">
                    <label>Requested by</label>
                    <div class="user-list" style="margin-bottom: 20px;">
                      <a href="/user/{{creator._id}}">
                        <div class="row">
                          <div class="col-sm-2">
                            <figure>
                              <img src="{{#if creator.picture}}{{creator.picture}}{{else}}
                          /images/placeholder/placeholder_350x350.png{{/if}}" class="img-responsive" alt=""/>
                            </figure>
                          </div>
                          <div class="col-sm-7">
                            <h3>{{creator.name.first_name}} {{creator.name.last_name}}</h3>
                            <p>Email: {{creator.email}}
                              <br />
                              Phone: {{#if creator.contact.phone}}{{creator.contact.phone}}{{else}}N/A{{/if}}</p>
                          </div>
                          <div class="col-sm-3">
                            <h3>User Type</h3>
                            <p>{{creator.user_type_display}}</p>
                          </div>
                        </div>
                      </a>
                    </div>
                  </div>
                </div>
              {{/if}}
              {{#if userIsAdmin}}
                <div class="row" style="margin-bottom: 40px;">
                  <div class="col-sm-12">
                    <label>Assigned to</label>
                    {{#if manager}}
                      <div class="user-list" style="margin-bottom: 20px;">
                        <a href="/user/{{manager._id}}">
                          <div class="row">
                            <div class="col-sm-2">
                              <figure>
                                <img src="{{#if manager.picture}}{{manager.picture}}{{else}}
                          /images/placeholder/placeholder_350x350.png{{/if}}" class="img-responsive" alt=""/>
                              </figure>
                            </div>
                            <div class="col-sm-7">
                              <h3>{{manager.name.first_name}} {{manager.name.last_name}}</h3>
                              <p>Email: {{manager.email}}
                                <br />
                                Phone: {{#if manager.contact.phone}}{{manager.contact.phone}}{{else}}N/A{{/if}}</p>
                            </div>
                            <div class="col-sm-3">
                              <h3>User Type</h3>
                              <p>{{manager.user_type_display}}</p>
                            </div>
                          </div>
                        </a>
                      </div>
                      <div class="text-center">
                        <a href="/tour/{{tour._id}}/edit/manager" class="btn btn-line btn-margin">
                          Assign Another Photographer</a>
                      </div>
                    {{else}}
                      <div class="text-center">
                        <a href="/tour/{{tour._id}}/edit/manager" class="btn btn-line btn-margin">
                          Please Assign a Photographer</a>
                      </div>
                    {{/if}}
                  </div>
                </div>
              {{/if}}
              {{> tour_settings_widget}}
              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group services-checkboxes">
                    <label>Tour Theme</label>
                    <div class="row">
                      <div class="col-sm-12">
                        {{#each tour_theme}}
                          <label class="radio-inline">
                            <input type="radio" name="tour_theme" value="{{value}}" {{#if checked}}checked{{/if}}/>{{name}}
                          </label>
                        {{/each}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {{#if userAdminOrManager}}
                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group services-checkboxes">
                      <label>Tour Status</label>
                      <div class="row">
                        <div class="col-sm-12">
                          {{#unless tour.isDelivered}}
                            {{#each tour_status}}
                              <label class="radio-inline">
                                <input type="radio" name="tour_status" value="{{value}}" {{#if checked}}checked{{/if}}/>{{name}}
                              </label>
                            {{/each}}
                            {{#if tourDeliverable}}
                              <button id="deliverButton" class="btn btn-line btn-line-black"
                                 style="float: right; background: none;">
                                Deliver This Tour</button>
                              <div id='deliver_fail' class='error' style="margin-top: 5px;">
                                Sorry, error occured this time saving your form.</div>
                            {{/if}}
                          {{else}}
                            <label>This tour is already delivered</label>
                            <button id="deliverButton" class="btn btn-line btn-line-black"
                               style="float: right; background: none;">
                                Deliver This Tour Again</button>
                            <div id='deliver_fail' class='error' style="margin-top: 5px;">
                              Sorry, error occured this time saving your form.</div>
                          {{/unless}}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {{/if}}

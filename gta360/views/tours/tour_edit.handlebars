{{#section 'javascript'}}
<script src="/cropper/dist/cropper.min.js"></script>
<script type="text/javascript" src="/js/three.min.js"></script>
<script type="text/javascript" charset="utf-8">

{{#if deliver}}
$('#tourDeliverModal').modal()
{{/if}}

$('#saveall_form').submit(function(e) {
  e.preventDefault()

  if ($('#tour_profile_form').valid() && $('#tour_settings_form').valid() && $('#property_highlights_form').valid()
    {{#if userAdminOrManager}}&& $('#virtual_tour_form').valid(){{/if}} && $('#open_house_date_form').valid()
    && $('#offer_presentation_date_form').valid() && $('#property_details_form').valid()
    && $('#neighborhood_form').valid() && $('#agent_profile_form').valid()) {

    // Disable submit button just after the form processed 1st time successfully.
    $('#SaveAllButton').attr({'disabled' : 'true', 'value' : 'Sending...' });

    /* Edit */
    var serializedForm = $('form').serialize().concat('&buttonSection=SaveAll')

    /* Post Ajax function of jQuery to get all the data from the submission of the form as soon as the form sends the values to email.php*/
    $.post($(this).attr('action'), serializedForm, function(result){
      location.reload()
    }).fail(function() {
      $('#saveall_fail').text('Sorry, error occured this time saving your form.')
      $('#SaveAllButton').removeAttr('disabled').attr('value', 'Save All')
      $('#saveall_fail').fadeIn(500)
    })
  }
  else {
    $('#saveall_fail').text('Some section is incomplete or invalid. Please review your changes.')
    $('#saveall_fail').fadeIn(500)
  }
})

  $('#deliverButton').click(function(e) {
    e.preventDefault()

    $(this).attr({'disabled' : 'true', 'value' : 'Delivering...' });

    $.post("{{url}}/deliver", function(result){
      window.location = '{{url}}?deliver=true'
    }).fail(function() {
      $('#deliver_fail').text('Sorry, error occured this time delivering this tour.')
      $('#deliverButton').removeAttr('disabled').attr('value', 'Deliver This Tour')
      $('#deliver_fail').fadeIn(500)
    })
  })
</script>
{{/section}}

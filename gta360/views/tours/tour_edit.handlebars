                <div class="col-sm-12">
                  <div class="form-group text-right">
                    <button type="submit" name="buttonSection" class="btn btn-line btn-edit"
                            value="TourSettings">Save</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>

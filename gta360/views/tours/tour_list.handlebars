<div id="content">
  <div class="container inner-padding">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
        <h1>List of Tours</h1>
        {{#unless userAdminOrManager}}
        <div class="separator"><span><i class="fa fa-circle"></i></span></div>
        <div class="spacer-single"></div>
        {{/unless}}
      </div>
    </div>

    {{#if userAdminOrManager}}
      <div class="row" style="margin-top: 60px; " >
        <div class="col-sm-8 col-sm-offset-2">
          <form action="/tour/list" method="get">
            <div class="row">
              <div class="col-sm-12">
                <h3 style="display: inline-block;">Filter</h3>
                <span style="padding-left: 6px;">Leave empty to apply no filter</span>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>By tour name, requestor, and photographer</label>
                  <input type="text" class="form-control" name="search"
                         value="" >
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group services-checkboxes">
                  <label>By status</label>
                  <div style="padding-top: 2px;">
                    <div class="inline-filter">
                      <label><input type="checkbox" name="status" value="REQUESTED" >Requested</label>
                    </div>
                    <div class="inline-filter">
                      <label><input type="checkbox" name="status" value="CONFIRMED" >Scheduled</label>
                    </div>
                    <div class="inline-filter">
                      <label><input type="checkbox" name="status" value="COMPLETE" >Completed</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-line btn-line-black" style="background: none;">Filter</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
        <div class="separator"><span><i class="fa fa-circle"></i></span></div>
        <div class="spacer-single"></div>
      </div>
    {{/if}}

    <!-- Tour list widget starts-->
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        {{> tour_list_widget}}
      </div>
    </div>
    <!-- Tour list widget ends -->
  </div>
</div>

{{#if request}}
  <div class="modal fade" id="tourRequestModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title" id="myModalLabel">Your Tour Has Been Requested</h3>
        </div>
        <div class="modal-body">
          <div class="text-center" style="margin-bottom: 20px;">
            <img src="/images/modal-image.png" alt="" style="width: 35%;">
          </div>
          <p>Thank you for requesting a tour.  A representative will contact you shortly.
            The new tour you have just requested is shown on your dashboard.</p>
          <div class="text-center">
            <button type="button" class="btn btn-line btn-line-black" style="background: none;"
                    data-dismiss="modal" aria-label="Close">OK</button>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}

{{#section 'javascript'}}
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      {{#if request}}
        $('#tourRequestModal').modal()
      {{/if}}
    });
  </script>
{{/section}}

<div id="content">
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
          {{#if userIsManager}}
            <h1>Tours Assigned</h1>
          {{else}}
            <h1>Tours Requested</h1>
          {{/if}}
          <div class="separator"><span><i class="fa fa-circle"></i></span></div>
          <div class="spacer-single"></div>
        </div>
      </div>

      <!-- Tour list widget starts-->
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          {{> tour_list_widget tours=requestedTours}}
        </div>
      </div>
      <!-- Tour list widget ends -->
    </div>
  </section>

  {{#if userAdminOrManager}}
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center wow fadeInUp">
          <h1>Scheduled Tour Calendar</h1>
          <div class="separator"><span><i class="fa fa-circle"></i></span></div>
          <div class="spacer-single"></div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div id="calendar"> 
          </div>
        </div> 
      </div>
    </div>
  </section>
  {{/if}}
</div>

{{#if request}}
  <div class="modal fade" id="tourRequestModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title" id="myModalLabel">Your Tour Has Been Requested</h3>
        </div>
        <div class="modal-body">
          <div class="text-center" style="margin-bottom: 20px;">
            <img src="/images/modal-image.png" alt="" style="width: 35%;">
          </div>
          <p>Thank you for requesting a tour.  A representative will contact you shortly.
            The new tour you have just requested is shown on your dashboard.</p>
          <div class="text-center">
            <button type="button" class="btn btn-line btn-line-black" style="background: none;"
                    data-dismiss="modal" aria-label="Close">OK</button>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}

{{#section 'javascript'}}
<script type="text/javascript" charset="utf-8">
$(document).ready(function() {
  var today = new Date();
  $('#calendar').fullCalendar({
    header: {
      left: 'prev,next today',
      center: 'title',
      right: 'month,agendaWeek,agendaDay'
    },
    eventLimit: true,
    editable: false,
    events: {{{events}}},
  });

  {{#if request}}
    $('#tourRequestModal').modal()
  {{/if}}
});
</script>
{{/section}}
